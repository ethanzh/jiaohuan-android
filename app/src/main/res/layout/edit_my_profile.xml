<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/main_activity_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/transparent"
        android:gravity="top">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="JH"
                android:id="@+id/textView14"
                android:textColor="#0e0019"
                android:textSize="24dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Settings"
                android:id="@+id/settings"
                android:onClick="inflateSettings"
                android:paddingRight="10dp"
                android:textColor="#0e0019"
                android:textSize="15dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_height="388dp"
        android:layout_width="match_parent"
        android:id="@+id/pager"
        android:background="#0e0019"
        android:orientation="vertical"
        android:layout_weight="5.59">


        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="142dp"
            android:layout_gravity="center_horizontal"
            android:weightSum="1"
            >

            <ImageView
                android:layout_width="148dp"
                android:layout_height="match_parent"
                android:id="@+id/picture"
                android:src="@drawable/pp_xianong"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Back"
                android:id="@+id/textView"
                android:onClick="back_to_profile"
                android:textColor="#FFFFFF"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/picture"
                android:layout_toStartOf="@+id/picture"
                android:layout_marginRight="29dp"
                android:layout_marginEnd="29dp"/>
        </RelativeLayout>

        <EditText
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Name"
            android:id="@+id/name"
            android:layout_gravity="center_horizontal"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:singleLine="true"
            android:paddingLeft="50dp"
            android:textColor="#000000"
            android:background="@drawable/rounded_edittext"
            android:textSize="18dp"/>

        <EditText
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Email"
            android:id="@+id/email"
            android:singleLine="true"
            android:paddingLeft="50dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:textColor="#000000"
            android:background="@drawable/rounded_edittext"
            android:layout_gravity="center_horizontal"
            android:textSize="18dp"/>

        <EditText
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Phone Number"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:id="@+id/phone"
            android:singleLine="true"
            android:paddingLeft="50dp"
            android:textColor="#000000"
            android:background="@drawable/rounded_edittext"
            android:layout_gravity="center_horizontal"
            android:textSize="18dp"/>

        <EditText
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Location"
            android:paddingTop="15dp"
            android:singleLine="true"
            android:paddingLeft="50dp"
            android:paddingBottom="15dp"
            android:id="@+id/location"
            android:textColor="#000000"
            android:background="@drawable/rounded_edittext"
            android:layout_gravity="center_horizontal"
            android:textSize="18dp"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#0e0019"
        android:weightSum="1">

        <ImageView
            android:layout_width="80dp"
            android:id="@+id/left"
            android:layout_height="50dp"
            android:onClick="fromEditToCards"
            android:src="@drawable/white_arrow"
            android:paddingLeft="5dp"
            android:paddingBottom="5dp"/>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.49"/>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:id="@+id/center"
            android:onClick="jumpToMain"
            android:src="@drawable/white_arrow"
            android:paddingBottom="5dp"/>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.51"/>

        <ImageView
            android:layout_width="80dp"
            android:onClick="fromEditToProfile"
            android:id="@+id/right"
            android:layout_height="50dp"
            android:src="@drawable/white_arrow"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"/>

    </LinearLayout>
</LinearLayout>